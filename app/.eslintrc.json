{
  "extends": ["react-native", "babel", "prettier", "prettier/react"],
  "plugins": ["prettier"],
  "rules": {
    "no-undef": 0,
    "no-console": 0,
    "no-use-before-define": 0,
    "import/no-namespace": 0,
    "import/no-commonjs": 0,
    "react/prop-types": 0,
    "react/display-name": 0,
    "react/no-unescaped-entities": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react/jsx-no-bind": 0,
    "react-native/no-color-literals": 0,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 100
      }
    ]
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  }
}
